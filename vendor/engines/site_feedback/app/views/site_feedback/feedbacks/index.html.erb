<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate"
  }
%>

<%
  meta title: "Leave us a feedback!",
     description: "Please collaborate with us to build a global platform for students who have potential to change the world.",
     keywords: %w(feedback collaboration entrepreneurship universities schools colleges)
%>

<% cache(['beta', 'collaborate_with_us', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>

  <div class="learn-wrapper bg-white">
    <div class="learn">
      <div class="jumbotron no-margin" data-pages="parallax">
          <div class="support-us-photo inner">
          <div class="container vmiddle">
          <div class="row">
                <div class="col-md-8 col-sm-10 auto-margin text-center">
                    <div class="hero-section z-index-10">
                        <h1 class="text-white bold">
                          Collaborate with us
                        </h1>
                        <p class="text-white no-margin fs-16">Help build hungryhead better</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>

    <section class="support-us bg-white m-b-50">
      <div class="wrapper-small">
        <div class="col-md-5 col-sm-8 auto-margin">
          <h3 class="normal">We need your ideas, suggestions and feedbacks</h3>
          <div class="divider b-b b-green b-md b-small m-t-20"></div>
          <div id="support_form">
            <p class="m-t-20 fs-16 text-master">
              We have built something that we believe could change the way entrepreneurship has been pursued worldwide, but we need more ideas to make the platform better and more useful for masses.
            </p>
            <h5 class="bold m-b-20">
              Please collaborate with us to build a global platform for students who have potential to change the world.
            </h5>
            <h5 class="m-b-20 b-b b-grey p-b-5 inline"><i class="fa fa-bullhorn"></i> Submit the form</h5>
            <%= render partial: 'form' %>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          You can also find us on
        </h1>
        <div class="social_icons">
          <i class="fa fa-twitter inline fs-40 text-brand"></i>
          <i class="fa fa-facebook inline fs-40 text-brand  m-l-15"></i>
        </div>
      </div>
    </section>
  </div>
<% end %>
<%= render partial: 'globals/footer' %>