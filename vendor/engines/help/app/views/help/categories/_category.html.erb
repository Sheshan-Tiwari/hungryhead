<div id="category_<%= category.id %>">
  <%= content_tag(:h6, class: 'inline no-margin') do %>
    <%= link_to(category.name, help_category_path(category), class: 'text-master') %>
  <% end %>
  <% if current_user && current_user.admin? %>
    <%= link_to('Edit', edit_category_path(category), remote: true, class: 'small-text inline m-l-10') %>
    <%= link_to('Delete', category_path(category), method: :delete, confirm: "Are you sure?", remote: true, class: 'small-text text-danger inline m-l-10') %>
  <% end %>
</div>
