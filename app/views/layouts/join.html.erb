    <% end %>

    <%= javascript_include_tag 'application' %>

    <!--[if !IE]><!-->
      <%= stylesheet_link_tag 'application', media: 'all' %>
    <!--<![endif]-->

    <!--[if IE 9]>
      <%= stylesheet_link_tag 'application_1', media: 'all' %>
      <%= stylesheet_link_tag 'application_2', media: 'all' %>
      <%= stylesheet_link_tag 'application_3', media: 'all' %>
      <%= stylesheet_link_tag 'application_4', media: 'all' %>
    <![endif]-->

    <!--[if lte IE 9]>
      <%= stylesheet_link_tag 'core/css/ie9',  media: 'all' %>
    <![endif]-->

    <script type="text/javascript">
      window.onload = function() {
        // fix for windows 8
        if (navigator.appVersion.indexOf("Windows NT 6.2") != -1)
          document.head.innerHTML += '<%= stylesheet_link_tag 'core/css/windows.chrome.fix' %>'
      }
    </script>

    <%= csrf_meta_tags %>
    <%= yield :head %>

  </head>

  <body class="fixed-header menu-behind <%= user_signed_in? ? '' : 'no-header' %> <%= controller_name %> <%= action_name %>">
    <% if browser.mobile? %>
      <%= render partial: 'globals/app_sidebar' %>
    <% end %>
    <div class="page-container">
      <% if user_signed_in? && !browser.mobile? %>
        <%= render partial: 'globals/nav', locals: {bg: 'bg-white'}  %>
      <% else %>
        <% if user_signed_in? && browser.mobile? || browser.mobile? %>
          <%= render partial: 'globals/page_nav_mobile' %>
        <% else %>
          <%= render partial: 'globals/guest_nav' %>
        <% end %>
      <% end %>

      <% if user_signed_in? %>
        <div class="page-content-wrapper">
          <div class="content">
            <%= yield %>
          </div>
        </div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>

    <% if Rails.env.production? %>
      <script type='text/javascript'>
        $(document).ready(function() {
          MetaEvents.forAllTrackableElements(document, function(id, element, eventName, properties) {
            mixpanel.track_links("#" + id, eventName, properties);
          });
        });
      </script>
    <% end %>

  </body>

</html>
