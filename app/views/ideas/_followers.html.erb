<div class="widget-16 panel no-margin widget-loader-circle">
<div class="panel-heading">
    <div class="panel-title b-b b-grey p-b-5">
      Followers
    </div>
</div>
<div class="panel-body">
    <ul class="list-unstyled">
      <% User.find(@idea.followers_ids.members).each do |follower| %>
        <li class="m-r-10">
            <div class="thumbnail-wrapper d32 circular b-white m-r-5 m-b-5 b-a b-white">
            <% if follower.avatar.present? %>
              <%= image_tag(follower.avatar.url(:avatar), :"data-src" => "#{follower.avatar.url(:avatar)}", :"data-src-retina" => "#{follower.avatar.url(:square)}", width: "35", height: "35") %>
            <% else %>
                <span class="placeholder bold text-white"><%= follower.first_name.first + follower.last_name.first %>
                </span>
            <% end %>
            </div>
        </li>
      <% end %>
      <% if @idea.followers_counter.value > 16 %>
        <li>
            <div class="thumbnail-wrapper d32 circular b-white">
                <div class="bg-master text-center text-white">
                    <span>+34</span>
                </div>
            </div>
        </li>
      <% end %>
    </ul>
    </div>
</div>