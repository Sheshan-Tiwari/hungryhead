<div class="modal fade fill-in stop-scrolling" id="modalSlideComments" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
<button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="pg-close fs-14"></i></button>
  <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-body no-padding">
        <% commentable = @idea %>
        <% data = render(template: 'comments/comments.json.jbuilder', locals: {comments: [], record: commentable, paginate: false} )%>
        <%= react_component('CommentBox', {data: data, standalone: true, white: true, scrollable: true, comment_channel: "#{@idea.class}-#{@idea.uuid}-comments", count: @idea.comments_counter.value, comments_path: comments_path(commentable_type: @idea.class.to_s, id: @idea.uuid)}) %>
        </div>
      </div>
  </div>
<!-- /.modal-dialog -->
</div>