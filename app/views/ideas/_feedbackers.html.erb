<div class="widget-16 panel no-margin widget-loader-circle">
<div class="panel-heading">
    <div class="panel-title b-b b-grey p-b-5">
      Feedbackers
    </div>
</div>
<div class="panel-body">
    <ul class="list-unstyled">
      <% @idea.find_feedbackers.each do |feedbacker| %>
        <li class="m-r-10">
            <div class="thumbnail-wrapper d32 circular b-white m-r-5 m-b-5 b-a b-white">
            <% if feedbacker.avatar.present? %>
              <%= image_tag(feedbacker.avatar.url(:avatar), :"data-src" => "#{feedbacker.avatar.url(:avatar)}", :"data-src-retina" => "#{feedbacker.avatar.url(:square)}", width: "35", height: "35") %>
            <% else %>
                <span class="placeholder bold text-white"><%= feedbacker.first_name.first + feedbacker.last_name.first %>
                </span>
            <% end %>
            </div>
        </li>
      <% end %>
      <% if @idea.feedbacks_count > 16 %>
        <li>
            <div class="thumbnail-wrapper d32 circular b-white">
                <div class="bg-master text-center text-white">
                    <span>+34</span>
                </div>
            </div>
        </li>
      <% end %>
    </ul>
    </div>
</div>