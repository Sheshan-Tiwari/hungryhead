<div class="wrapper-small idea-bg-gradient">
  <div class="col-md-4 jumbrotron text-center auto-margin" data-pages="parallax" data-social="cover">
    <div class="hero-text inner">
      <h2 class="text-white">Browse ideas</h2>
      <h5 class="text-white">or, <%= link_to("Pitch", new_idea_path(:rules), class: 'text-white b-b b-white p-b-5') %> your own idea and share with others</h5>
    </div>
  </div>
</div>

<div class="container p-t-40 p-b-80">
  <div class="idea-list">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th colspan="2" class="no-padding"><%= pluralize(@ideas.count, 'Result',) %> </th>
          <th>Follow to get updates</th>
          <th class="text-center">Idea Stats</th>
        </tr>
      </thead>
      <tbody>
        <% @ideas.each do |idea| %>
        <tr class="full-border-light-bottom">
          <td class="no-padding p-t-25 p-b-20" class="no-border">
            <div class="thumbnail-wrapper d48 circular auto-margin m-r-5 m-b-5">
             <% if idea.logo.present? %>
               <%= image_tag(user.logo.url(:avatar), width: "50px") %>
             <% else %>
               <span class="placeholder bold text-white">
                 <%= idea.name_badge.upcase %>
               </span>
             <% end %>
             </div>
          </td>
          <td style="max-width: 350px;" class="idea-info font-opensans no-border">
            <h5 class="no-margin fs-16 bold">
              <%= link_to(idea.name, idea_path(idea)) %>
            </h5>
            <p class="fs-14 m-t-5">
            <span>
              Based in:
              <% idea.location_list.each do |tag| %>
                <%= link_to("@#{tag.downcase}", tag_path(tag.parameterize), class: "text-black light") %>
              <% end %>
            </span>
            <span>
              Market:
              <% idea.market_list.each do |tag| %>
                <%= link_to("@#{tag.downcase}", tag_path(tag.parameterize), class: "text-black light") %>
              <% end %>
            </span>
            </p>
            <p class="fs-14 m-t-5">
              <%= idea.elevator_pitch %>
            </p>
          </td>
          <td style="display:table-cell; vertical-align:middle;" class="no-border text-center">
            <div class="card-follow-button">
              <%= react_component('Follow',{:followed => followed?(idea)}) %>
            </div>
            <script type="text/javascript">
               ReactRailsUJS.mountComponents();
            </script>
          </td>
          <td style="min-width: 300px; display:table-cell; vertical-align:middle;" class="no-border text-center no-padding p-l-20">
            <ul class="stastics-list">
              <li class="clearfix">
                Followers
                <span class="text-master">
                  <%= number_to_human(idea.followers_counter.value,  :format => '%n%u', :units => { :thousand => 'K' }) %>
                </span>
              </li>
              <li class="clearfix pull-reset">
                Feebacks
                <span class="text-master">
                <%= number_to_human(idea.feedbackers_counter.value,  :format => '%n%u', :units => { :thousand => 'K' }) %>
                </span>
              </li>
              <li class="clearfix pull-reset">
                Votes
                <span class="text-master">
                <%= number_to_human(idea.votes_counter.value,  :format => '%n%u', :units => { :thousand => 'K' }) %>
                </span>
              </li>
            </ul>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="paging-container p-r-15">
      <%= will_paginate(@idea, class: 'displayblock padding-10 paging_bootstrap pull-right pagination clearfix') %>
  </div>
</div>
</div>


