<div class="col-md-8 no-padding p-l-15">

<div class="auto-height box-shadow ">
  <div class="idea-header bg-solid">
    <div class="col-md-6">
      <div class="idea-meta m-l-15 inline p-t-20 p-b-10">
            <h3 class="no-margin text-white"><%= @idea.name.capitalize %> <i class="fa fa-check-circle text-white fs-16 m-l-10"></i></h3>
          <p class="no-margin text-white fs-16"><%= @idea.high_concept_pitch %></p>
              <%= content_tag(:span) do %>
                <%= link_to(url_with_protocol(@idea.website), class: "text-white", :"data-toggle" => "tooltip", :"data-placement" => "top", :"data-original-title" => "Website", target: "_blank") do %>
                  <i class="fa fa-rss"></i>
                <% end %>
              <% end %>
              <%= content_tag(:span, class: "m-l-10 text-white") do %>
                <% @idea.location_list.each do |location| %>
                  <%= link_to(profile_path(location.parameterize), :"data-toggle" => "tooltip", :"data-placement" => "top", :"data-original-title" => location, class: "text-white") do %>
                    <i class="fa fa-map-marker"></i>
                  <% end %>
                <% end %>
              <% end %>
          <p class="text-white m-t-5 small"><%= @idea.school.name %></p>
      </div>
    </div>
    <div class="col-md-6 p-t-40">
      <div class="col-md-4 no-padding text-center b-r b-white b-dashed">
          <h1 class="all-caps fs-13 text-white bold small">Feedbacks</h1>
          <p class="all-caps bold  fs-13 no-margin text-white ">5600</p>
      </div>
      <div class="col-md-4 text-center b-r b-white b-dashed">
          <h1 class="all-caps fs-13 text-white bold small">Raised</h1>
          <p class="all-caps bold  fs-13 no-margin text-white ">24000</p>
      </div>
      <div class="col-md-4 text-center">
          <h1 class="all-caps fs-13 text-white bold small">Votes</h1>
          <p class="all-caps bold  fs-13 no-margin text-white">14,256</p>
      </div>
    </div>
  </div>
</div>


<div class="box-shadow bg-white">
<div class="profile-nav p-l-10 row">
    <div class="col-md-5 no-padding">
