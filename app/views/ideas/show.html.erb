        <li class="inline b-r b-grey p-l-10 p-t-15 p-b-15 p-r-15 active">
        <div class="thumbnail-wrapper absolute m-r-5 d32 circular bordered b-white">
          <% if @user.avatar.present? %>
          <%= image_tag(@user.avatar.url(:avatar), :"data-src" => "#{@user.avatar.url(:avatar)}", :"data-src-retina" => "#{@user.avatar.url(:square)}", width: "55", height: "55") %><% else %>
              <span class="placeholder bold text-white" width="32px" height="32px"><%= @user.first_name.first + @user.last_name.first %>
