<%
  stats = {
    followers_count: @idea.followers_counter.value,
    feedbacks_count: @idea.feedbackers_counter.value,
    investments_count: @idea.investors_counter.value,
    views_count: @idea.views_counter.value,
    comments_count: @idea.comments_counter.value,
