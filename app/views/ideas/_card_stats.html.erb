<%
  stats = {
    followers_count: number_to_human(@idea.followers_counter.value),
    feedbacks_count: number_to_human(@idea.feedbackers_counter.value),
    investments_count: number_to_human(@idea.investors_counter.value),
    views_count: number_to_human(@idea.views_counter.value),
    comments_count: number_to_human(@idea.comments_counter.value),
    votes_count: number_to_human(@idea.votes_counter.value),
    score: number_to_human(Idea.leaderboard.score(@idea.id))
  }.to_json
%>
<%= react_component('IdeaCardStats', {data: stats}) %>
