<div class="modal fade" tabIndex="-1" role="dialog" id="ideaTeamPopup" aria-labelledby="ideaTeamPopupLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
<div class="modal-dialog modal-lg">
<div class="modal-content">
   <div class="profile-wrapper-title">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title" id="ideaTeamPopupLabel"><%= @idea.name %> team members</h4>
    </div>
  <div class="modal-body white-background">
  <ul class="followers-list">
    <% @team.each do |f| %>
      <% cache ["team_list_follows_#{current_user.follows?(f)}", f] do %>
       <%= render partial: 'shared/liker', locals: {f: f} %>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>
</div>
</div>