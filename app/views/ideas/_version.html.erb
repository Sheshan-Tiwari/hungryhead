<tr class="full-border-light-bottom">
  <td class="p-t-25 no-border">
    <div class="thumbnail-wrapper d48 circular auto-margin m-r-5 m-b-5">
     <% if version.user_avatar.present? %>
       <%= image_tag(version.user_avatar) %>
     <% else %>
       <span class="placeholder bold text-white">
         <%= version.name_badge.upcase %>
       </span>
     <% end %>
     </div>
  </td>
  <td class="idea-info no-border p-r-50">
    <p class="no-margin">
      <%= link_to(version.user_name, version.owner_url, class: 'bold') %>
      <span class="inline"> updated <%= version.changeset.keys.first.gsub(/_/, ' ') %></span>
      <span>for <%= link_to(@idea.name, idea_path(@idea))%></span>
    </p>
    <span class="hint-text"><%= local_time_ago(version.created_at) %></span>
    <p class="fs-14 m-t-5">
      <%= markdownify(version.changeset[version.changeset.keys.first.to_sym][1]) %>
    </p>
  </td>
</tr>