<div class="container p-b-60">
  <div class="col-md-8 col-lg-8 col-sm-8 no-padding p-l-15">
    <%= render partial: 'ideas/menu' %>
    <div class="m-t-20">
      <div class="idea-content">
       <%= render partial: "feedback", locals: {feedback: @feedback} %>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-lg-4 col-sm-4">
    <%= render partial: 'ideas/sidebar' %>
  </div>
</div>

<% if user_signed_in? && policy(@idea).collaborator? %>
  <div class="idea-collaboration-floating-panel">
    <%= render 'ideas/collaboration' %>
  </div>
<% end %>



