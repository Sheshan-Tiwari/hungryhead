<% cache(cache_key_for_school(@school)) do %>
  <%= content_tag(:div, class: 'popover-card') do %>
  	<%= content_tag(:div, class: 'popover-header  text-center') do %>
  		<%= content_tag(:div, class: 'popover-card-logo') do %>
  		  <div class="thumbnail-wrapper d48 auto-margin m-r-5 m-b-5">
        <% if @school.avatar_present? %>
          <%= image_tag(@school.get_avatar, width: "50px") %>
        <% else %>
          <span class="placeholder bold text-white">
            <%= @school.name_badge.upcase %>
          </span>
        <% end %>
        </div>
  			<h2><%= @school.name %></h2>
  			<span><%= truncate(@school.description, length: 50) %></span>
        <div class="card-follow-button">
          <%= react_component('Follow',{:followed => followed?(@school)}) %>
        </div>
        <script type="text/javascript">
           ReactRailsUJS.mountComponents();
        </script>
  		<% end %>
  	<% end %>
        <div class="popover-card-stats">
        <ul class="stastics-list">
          <li>
            People
            <span><i class="fa fa-users"></i> <%= @school.students_counter.value %></span>
          </li>
          <li>
            Followers
            <span><i class="fa fa-dollar"></i> <%= @school.followers_counter.value %></span>
          </li>
          <li>
            Ideas
            <span><i class="fa fa-comment"></i> <%= @school.ideas_counter.value %></span>
          </li>
        </ul>
      </div>
  <% end %>
<% end %>