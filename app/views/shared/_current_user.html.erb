<%= javascript_tag data: {turbolinks_eval: "always"} do %>
	var u = {
		id: "<%= current_user.uid %>",
		name: "<%= current_user.name %>",
		user_name_badge: "<%= current_user.name_badge %>",
		balance: "<%= current_user.fund['balance'] %>",
		email: "<%= current_user.email %>",
		ideas: "<%= current_user.ideas_counter.value %>",
		feedbacks: "<%= current_user.feedbacks_counter.value %>",
		investments: "<%= current_user.investments_counter.value %>",
		avatar: "<%= current_user.get_avatar %>",
		role: "<%= current_user.role %>",
		user_url:  "<%= profile_url(current_user) %>",
		authenticated: "<%= user_signed_in? %>"
	}
	window.currentUser = u;
	window.PUSHER_APP_KEY = "<%= ENV['PUSHER_APP_KEY'] %>";
<% end %>
