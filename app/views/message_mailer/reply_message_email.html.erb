<table class="main" width="100%" cellpadding="0" cellspacing="0" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; border-radius: 3px; background: #fff; margin: 0; padding: 0; border: 1px solid #e9e9e9;">
    <tr style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 0;">
      <td class="content-wrap" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; vertical-align: top; margin: 0; padding: 20px;" valign="top">
        <table width="100%" cellpadding="0" cellspacing="0" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 0;">

        <tr style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 0; margin-top:20px;">
          <td class="content-block" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; vertical-align: top; margin: 0; padding: 0 0 15px;" valign="top">
            <h3 style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 22px; line-height: 1.6; margin: 0; padding: 0;"> Hi <%= @receiver.name.split(' ').first %> ! </h3>
          </td>
        </tr>

        <tr style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 0;">
          <td class="content-block" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; vertical-align: top; margin: 0; padding: 0px 0 20px; border-bottom: 1px solid #ddd;" valign="top" align="left">
            You have received a new reply: <strong><%= @subject %></strong>
          </td>
        </tr>

        <tr style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 0;">
          <td class="content-block" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; vertical-align: top; margin: 0; padding: 0 0 15px;" valign="top">
            <div style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 15px; background-color: #fafafa; overflow: hidden;">
              <%= simple_format @message.body, class: 'description' %>
            </div>
          </td>
        </tr>

        <tr style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; margin: 0; padding: 0;">
          <td class="content-block" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; vertical-align: top; margin: 0; padding: 0 0 15px;" valign="top">
            <p style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 12px; line-height: 1.4; margin: 0; padding: 0; margin-left:5px;">
              Visit <%= link_to conversation_url(@message.conversation.id, box: 'inbox'), conversation_url(@message.conversation.id, box: 'inbox') %> to reply.
            </p>
          </td>
        </tr>

        <tr style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; margin: 0; padding: 0;">
          <td class="content-block" style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 15px; line-height: 1.6; vertical-align: top; margin: 0; padding: 0 0 15px;" valign="top">
              &mdash; sent from <%= @message.sender.name %>
          </td>
        </tr>
        </table>
      </td>
    </tr>
</table>