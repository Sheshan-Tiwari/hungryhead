//find form
var $el = $('#invite_form_<%= @invite_request.user_type %>');
//Append message
var $form = $el.find('#new_invite_request');
$form[0].reset();

<% if @invite_request.errors.any? %>
  $form.hide().fadeOut('fast');
  $el.append("<%= j render partial: 'error_message' %>")
  setTimeout(function(){
    $el.find('.no-content').remove();
    $form.show().fadeIn('fast');
  }, 3000);
<% end %>