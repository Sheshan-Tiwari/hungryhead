<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate"
  }
%>

<%
  meta title: "For Academic Institutions - Streamline the idea support process",
     description: "We have integrated management and visualization tools for academic insitutions to make the student idea support process transparent",
     keywords: %w(student\ entrepreneurship idea\ collaboration universities\ entrepreneurship schools\ entrepreneurship idea\ validation student\ idea\ validation student\ idea\ collaboration global\ ideas\ platform)
%>

<%
  meta twitter: {
    card: "summary_large_image",
    site: "@hungryhead_co",
    title: "For Academic Institutions - Streamline the idea support process",
    image: "https:#{image_url('for_institutions.jpg')}",
    description: "We have integrated management and visualization tools for academic insitutions to make the student idea support process transparent",
  }
%>

<%
  meta og: {
    image: "https:#{image_url('for_institutions.jpg')}",
    title: "For Academic Institutions - Streamline the idea support process",
    url: "#{request.original_url}",
    description: "We have integrated management and visualization tools for academic insitutions to make the student idea support process transparent",
    site_name: "Hungryhead",
    locale: "en_GB",
    type: "article"
  }
%>


<% cache(['beta', 'the_product', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="product-wrapper bg-white">
    <div class="product">
      <div class="jumbotron no-margin" data-pages="parallax">
          <div class="for-institutions-photo">
          <div class="container vmiddle">
          <div class="col-md-6 auto-margin <%= browser.mobile? ? 'p-b-40 p-t-20' : ''  %>">
            <div class="hero-section inner text-center">
              <h1 class="text-white bold">
                For Academic Institutions
              </h1>
              <p class="text-white fs-16">
                Bridging gap between you and your enpreneurial students
              </p>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>

    <section class="bg-master-lightest text-center wrapper-small full-border-light-bottom no-overflow" id="intro">
      <div class="col-sm-10 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Connect, manage and support your entrepreneurial students seamlessly
        </h1>
        <p class="col-sm-10 col-md-10 auto-margin m-b-20 fs-16 text-master">
          Learn more about integrated tools
        </p>
      </div>
    </section>

    <section class="wrapper-small no-overflow">
      <div class="container col-md-offset-1">
        <div class="col-md-5 col-sm-5 hidden-xs">
          <div class="content-mask-md text-center">
            <%= image_tag('product/visualize_support.png', class: "image-responsive-height lazy #{browser.mobile? || browser.tablet? ? '' : 'auto-width displayblock auto-margin'}") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7 m-t-40 ">
          <h1 class="m-t-5">Connect and communicate</h1>
          <h5>All from one place</h5>
          <p class="m-b-20 fs-16 text-master">
            Send emails, share resources and stay in sync with entrepreneurial students seamlessly and efficiently from your integrated dashboard.
          </p>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest wrapper-small no-overflow">
      <div class="container col-md-offset-1">
        <div class="col-md-5 col-sm-5 hidden-xs">
          <div class="content-mask-md text-center">
            <%= image_tag('product/ideas_supported.png', class: "image-responsive-height #{browser.mobile? ? '' : 'auto-width displayblock p-t-10 auto-margin'} lazy") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7 m-t-20">
          <h1 class="m-t-5">Student ideas support</h1>
          <h5>Discover and support vetted ideas</h5>
          <p class="m-b-20 fs-16 text-master">
             Our integrated dashboard lets you discover and support best vetted ideas in the community directly and efficiently.
          </p>
        </div>
      </div>
    </section>

    <section class="wrapper-small no-overflow">
      <div class="container col-md-offset-1">
        <div class="col-md-5 col-sm-5 hidden-xs">
          <div class="content-mask-md text-center">
            <%= image_tag('product/engage_event.png', class: "image-responsive-height #{browser.mobile? ? '' : 'auto-width displayblock p-t-10 auto-margin'} lazy") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7">
          <h1 class="m-t-5">Events and workshops</h1>
          <h5>Create events and workshops</h5>
          <p class="m-b-20 fs-16 text-master">
            Collaborate in person and beyond through our discussion channels and integrated chat.
          </p>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest  wrapper-small no-overflow">
      <div class="container col-md-offset-1">
        <div class="col-md-5 col-sm-5 hidden-xs">
          <div class="content-mask-md text-center">
            <%= image_tag('product/dashboard.png', class: "image-responsive-height p-t-10 lazy #{browser.mobile? || browser.tablet? ? '' : 'auto-width displayblock auto-margin'}") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7 m-t-20">
          <h1 class="m-t-5">All-in-one dashboard</h1>
          <h5>Tools for your enterprising needs</h5>
          <p class="m-b-20 fs-16 text-master">
            Our all-in-one integrated dashboard is one place to find tools you need to connect, engage and support your students in their entrepreneurial journey.
          </p>
        </div>
      </div>
    </section>

    <section class="full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-10 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Learn about collaboration on hungryhead
        </h1>
        <%= meta_events_tracked_link_to('Click here', collaboration_path, class: 'main-button fs-13 bold', :meta_event => { :category => :visitor, :event => :page_viewed, :properties => { title: 'Collaboration Page' } }) %>
      </div>
    </section>

  </div>
<% end %>
<%= render partial: 'globals/footer' %>

