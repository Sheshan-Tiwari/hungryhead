<div class="join-wrapper bg-white">
  <%= cache(['beta', 'join_as_alumni_jumbotron', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
    <div class="join">
      <div class="jumbotron no-margin" data-pages="parallax" data-social="cover">
          <div class="join-alumni-photo">
          <div class="container vmiddle">
          <div class="row inner">
                <div class="col-md-8 col-sm-10 auto-margin">
                    <div class="hero-section text-center">
                        <%= image_tag('badges/wise.png') %>
                        <h1 class="text-white bold">Join as a Alumni</h1>
                        <p class="text-white fs-16">Help students explore entrepreneurship</p>
                    </div><!-- /End Intro-Section -->
                </div><!-- /End Col -->
            </div><!-- /End Row -->
        </div>
        </div>
      </div>
    </div>
  <% end %>

  <section class="join-as-alumni-content">
    <div class="join-as-alumni-form wrapper-small">
      <div class="container">
        <div class="row m-b-20">
          <div class="col-md-5 col-sm-8 auto-margin">
            <div>
              <h3>Hungryhead is a new way to start entrepreneurship</h3>
              <p class="text-master">
                We want to fundamentally change the way entrepreneurship has been persued worldwide. Please join our revolution to help students with their startup ideas.
              </p>
            </div>
          </div>
        </div>
        <%= react_component('JoinAsAlumniForm') %>
      </div>
    </div>
  </section>
  <%= render partial: 'globals/footer' %>
</div>

