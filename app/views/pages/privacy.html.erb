<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate"
  }
%>

<%
  meta title: "Privacy Policy",
     description: "Read and understand how we protect your private data",
     keywords: %w(privacy policy students universities colleges)
%>

<% cache(['beta', 'privacy_policy', 'v1']) do %>
  <div class="learn-wrapper bg-white">
    <div class="learn">
      <div class="jumbotron no-margin" data-pages="parallax">
          <div class="brand-photo inner">
          <div class="container vmiddle">
          <div class="row">
                <div class="col-md-8 col-sm-10 auto-margin text-center">
                    <div class="hero-section z-index-10">
                        <h1 class="text-white bold">
                          Privacy Policy
                        </h1>
                        <p class="text-white no-margin fs-16">
                          How we protect and use your private data
                        </p>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>

    <section class="story p-b-100">
      <div class="wrapper-small">
        <div class="col-md-6 col-sm-10 auto-margin">
          <%= render partial: 'pages/content/privacy' %>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Read our cookies policy
        </h1>
        <%= link_to('Click here', cookies_path, class: 'main-button m-t-10 fs-13 bold') %>
      </div>
    </section>
  </div>
<% end %>
<%= render partial: 'globals/footer' %>

