<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate"
  }
%>

<%
  meta title: "Collaboration - Achieve shared goals together",
     description: "Seamless and realtime collaboration with team members and community to share and validate startup ideas",
     keywords: %w(student\ entrepreneurship school\ entrepreneurs student\ entrepreneurs idea\ collaboration universities\ entrepreneurship collaborative\ network\ students schools\ entrepreneurship entrepreneurship\ ideas idea\ validation student\ idea\ validation student\ idea\ collaboration global\ ideas\ platform)
%>

<%
  meta twitter: {
    card: "summary_large_image",
    site: "@hungryhead_co",
    title: "Collaboration - Achieve shared goals together",
    image: "https:#{image_url('collaboration.jpg')}",
    description: "Seamless and realtime collaboration with team members and community to share and validate startup ideas",
  }
%>

<%
  meta og: {
    image: "https:#{image_url('collaboration.jpg')}",
    title: "Collaboration - Achieve shared goals together",
    url: "#{request.original_url}",
    description: "Seamless and realtime collaboration with team members and community to share and validate startup ideas",
    site_name: "Hungryhead",
    locale: "en_GB",
    type: "article"
  }
%>


<% cache(['beta', 'the_product', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="product-wrapper bg-white">
    <div class="product">
      <div class="jumbotron no-margin" data-pages="parallax">
          <div class="collaboration-photo">
          <div class="container vmiddle">
          <div class="col-md-6 auto-margin <%= browser.mobile? ? 'p-b-40 p-t-20' : ''  %>">
            <div class="hero-section inner text-center">
              <h1 class="text-white bold">
                Collaboration
              </h1>
              <p class="text-white fs-16">
                Achieve shared goals together
              </p>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>

    <section class="bg-master-lightest text-center wrapper-small full-border-light-bottom no-overflow" id="intro">
      <div class="col-sm-10 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Our approach is to combine all spheres of human interaction so that everyone can make the most out of it.
        </h1>
        <p class="col-sm-10 col-md-10 auto-margin m-b-20 fs-16 text-master">
          Learn how you can collaborate on hungryhead.
        </p>
      </div>
    </section>

    <section class="wrapper-small no-overflow">
      <div class="container col-md-offset-2">
        <div class="col-md-3 col-sm-4 hidden-xs">
          <div class="content-mask-md m-t-20 text-center">
           <%= image_tag('icons/collaborate-icon.png', class: "image-responsive-height #{browser.mobile? ? '' : 'auto-width displayblock p-t-10 auto-margin'} lazy") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7 col-xs-12">
          <h1 class="m-t-5">Team Collaboration</h1>
          <h5>Brainstorm and collaborate on ideas privately.</h5>
          <p class="m-b-20 fs-16 text-master">
            Idea discussion channels let team members connect and communicate in realtime. Invite and add team members, track changes and measure statistics from your idea profile.
          </p>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest wrapper-small no-overflow">
      <div class="container col-md-offset-2">
        <div class="col-md-3 col-sm-4 hidden-xs">
          <div class="content-mask-md m-t-20 text-center">
            <%= image_tag('icons/global-collaboration.png', class: "image-responsive-height #{browser.mobile? ? '' : 'auto-width displayblock p-t-10 auto-margin'} lazy") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7 col-xs-12">
          <h1 class="m-t-5">Community Collaboration</h1>
          <h5>Brainstorm and collaborate on idea with community.</h5>
          <p class="m-b-20 fs-16 text-master">
            Integrated feedbacks and Q&A's lets community connect and engage with team members in making ideas useful.
          </p>
        </div>
      </div>
    </section>

    <section class="wrapper-small no-overflow">
      <div class="container col-md-offset-2">
        <div class="col-md-3 col-sm-4 hidden-xs">
          <div class="content-mask-md m-t-20">
            <%= image_tag('icons/calendar.png', class: "image-responsive-height #{browser.mobile? ? '' : 'auto-width displayblock p-t-10 auto-margin'} lazy") %>
          </div>
        </div>
        <div class="col-md-5 col-sm-7 col-xs-12">
          <h1 class="m-t-5">Personal collaboration</h1>
          <h5>Collaborate with peers in person.</h5>
          <p class="m-b-20 fs-16 text-master">
            Create events, invite peers and collaborate in person. Stay connected beyond events through integrated chat and discussion channels.
          </p>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Learn how gamification works on hungryhead
        </h1>
        <%= meta_events_tracked_link_to('Click here', gamification_path, class: 'main-button fs-13 bold', :meta_event => { :category => :visitor, :event => :page_viewed, :properties => { title: 'Gamification Page' } }) %>
      </div>
    </section>

  </div>
<% end %>

<%= render partial: 'globals/footer' %>

