<% cache(['beta', 'get_started', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
<div class="join-wrapper bg-white">
  <div class="join">
  <div class="jumbotron no-margin" data-pages="parallax" data-social="cover">
      <div class="join-photo">
      <div class="container vmiddle">
      <div class="row">
            <div class="col-md-8 auto-margin">
                <div class="hero-section inner text-center">
                    <h1 class="text-white bold">Join us</h1>
                    <p class="text-white fs-16 semi-bold">
                      Achieve shared goals together
                    </p>
                </div>
            </div>
        </div>
    </div>
    </div>
  </div>
  </div>

  <section class="bg-master-lightest text-center wrapper-small full-border-light-bottom no-overflow" id="intro">
    <div class="col-sm-12 col-md-8 auto-margin">
      <h1 class="m-t-5 m-b-20">
        Platform for students, mentors and institutions
      </h1>
      <p class="col-sm-10 col-md-10 auto-margin m-b-20 fs-16 text-master">
        Scroll down to get started.
      </p>
    </div>
  </section>

  <div class="container horz-section wrapper-small p-b-100">
    <div class="panel panel-transparent">
      <ul class="nav nav-tabs nav-tabs-simple nav-tabs-left p-t-20">
        <li class="active">
          <a data-toggle="tab" href="#forStudents">For Students</a>
        </li>
        <li>
          <a data-toggle="tab" href="#forMentors">For Alumni</a>
        </li>
        <li>
          <a data-toggle="tab" href="#forSchools">For Institutions</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="forStudents">
          <div class="col-md-8 col-sm-10 col-xs-12 auto-margin">
            <div class="content-mask-md m-b-20 text-center">
              <%= image_tag('badges/entrepreneur.png', class: "image-responsive-height auto-width lazy") %>
            </div>
            <h1 class="m-t-5 text-center m-b-20">For students</h1>
            <p class="fs-16 text-master">
               Whether you are student with your next big idea or want to collaborate with your peers, we have got you covered. We took almost all concepts that are related to idea building and baked it into our gamification engine to make the platform fun and rewarding.
            </p>
            <h5 class="fs-16 bold">
               Hungryhead is currently in beta. <%= link_to('Click here', new_user_registration_path) %> to create an account.
            </h5>
          </div>
        </div>
        <div class="tab-pane" id="forMentors">
         <div class="col-md-8 col-sm-10 col-xs-12 auto-margin">
           <div class="content-mask-md m-b-20 text-center">
             <%= image_tag('badges/scholar.png', class: "image-responsive-height auto-width lazy") %>
           </div>
           <h1 class="m-t-5 text-center">For alumni and mentors</h1>
           <h5 class="bold">
             If you are an alumni or someone who want to contribute your technical expertise. Please submit the below form to request an invite.
           </h5>
           <%= simple_form_for(InviteRequest.new, url: invite_requests_path, html: {role: 'form', class: "new_invite_request p-b-20", id: "new_invite_request"}, remote: true) do |f| %>
            <div class="col-md-8 col-sm-8 auto-margin">
              <h3 class="text-black semi-bold m-b-20 p-b-5 b-b b-grey pull-left">Lets get started</h3>
            </div>
            <div class="join-alumni-form clearfix">
             <div class="col-sm-8 col-md-8 auto-margin">
               <div class="form-group form-group-default">
                 <label>Your Name</label>
                 <%= f.input_field :name, class: "string required form-control", placeholder: "John Smith" %>
               </div>
             </div>

             <div class="col-sm-8 col-md-8 auto-margin">
               <div class="form-group form-group-default input-group">
                 <span class="input-group-addon bg-master text-master">
                   http://
                 </span>
                 <label>Reference website</label>
                 <%= f.input_field :url, as: :url, class: "string required form-control", placeholder: "linkedin, about me url..." %>
               </div>
             </div>

             <div class="col-sm-8 col-md-8 auto-margin">
               <div class="form-group form-group-default input-group input-group-attached col-xs-12">
               <label>Email Address</label>
               <%= f.input_field :email, class: "string required form-control", placeholder: "johndoe@example.com" %>
               </div>
               <span class="input-group-btn">
                  <%= f.button :submit, value: 'Request invite', class: 'btn main-button pull-right m-t-20 clearfix' %>
               </span>
               <p class="fs-12 pull-right text-right m-t-20 text-master">
                 We will be in touch within next 24 hours.
               </p>
             </div>
           </div>
           <% end %>
         </div>
        </div>

        <div class="tab-pane" id="forSchools">
        <div class="col-md-8 col-sm-10 col-xs-12 auto-margin">
          <div class="content-mask-md m-b-20 text-center">
            <span class="fa fa-university fs-50"></span>
          </div>
          <h1 class="m-t-5 text-center">For institutions</h1>
          <p class="fs-16 text-master m-t-20">
            We built hungryhead for institutions to make the student startup support process practical and streamlined. We have integrated tools for institutions to collaborate with entrepreneurial students easily and provide support directly.
          </p>
          <p class="fs-16 text-master bold">
            To learn more and request access to manage your institution profile. <%= link_to('Click here', 'Email us') %> to get in touch.
          </p>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="p-t-100 clearfix"></div>

</div>
<% end %>
<%= render partial: 'globals/footer' %>
