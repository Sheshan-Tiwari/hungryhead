<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate"
  }
%>

<%
  meta title: "Why we are doing, what we are doing",
     description: "Learn why we started hungryhead - a new way to start entrepreneurship for students",
     keywords: %w(students collaboration entrepreneurship universities schools colleges)
%>

<%
  meta twitter: {
    card: "summary_large_image",
    site: "@hungryhead_co",
    title: "Why we are doing, what we are doing",
    image: "https:#{image_url('why-photo.jpg')}",
    description: "Learn why we started hungryhead - a new way to start entrepreneurship for students",
  }
%>
<%
  meta og: {
    image: "https:#{image_url('why-photo.jpg')}",
    title: "Why we are doing, what we are doing",
    url: "#{request.original_url}",
    description: "Learn more about why we started hungryhead - a new way to start entrepreneurship for students",
    site_name: "Hungryhead",
    locale: "en_GB",
    type: "article"
  }
%>


<% cache(['beta', 'why', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="learn-wrapper bg-white">
    <div class="learn">
      <div class="jumbotron no-margin" data-pages="parallax">
        <div class="why-photo">
          <div class="container vmiddle">
          <div class="row <%= browser.mobile? ? 'p-b-40 p-t-20' : ''  %>">
                <div class="col-md-8 col-sm-10 auto-margin">
                    <div class="hero-section inner text-center">
                        <h1 class="text-white bold">Learn the reason</h1>
                        <p class="text-white fs-16">
                          Why we are doing, what we are doing?
                        </p>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>

    <div class="what-section bg-white">
      <div class="wrapper-small">
        <div class="col-md-6 col-sm-10 auto-margin">
          <%= render partial: 'pages/content/why' %>
        </div>
      </div>
    </div>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Things to know about hungryhead
        </h1>
        <%= link_to('Click here', learn_path, class: 'main-button fs-13 bold') %>
      </div>
    </section>

  </div>
<% end %>
<%= render partial: 'globals/footer' %>
