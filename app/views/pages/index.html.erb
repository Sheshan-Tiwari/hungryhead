<div class="splash-wrapper">
    <section class="slider-caption">
      <div class="container">
        <div class="row">
          <div class="col-md-10 auto-margin hero-text text-center">
            <%= image_tag('badges/idea-guy.png') %>
            <h1>
              Practically explore entrepreneurship with <span class="bold">peers and mentors</span> for
              Students
            </h1>
          </div>
        </div>
        <div class="row">
              <div class="col-md-6 auto-margin">
                <div class="slider-caption-text text-center">
                  <div class="btn-box p-t-20">
                    <%= link_to('Join as Mentor', learn_path, class: "btn btn-rounded btn-ghost text-white") %>
                    <%= link_to(get_started_path, class: "btn btn-rounded btn-ghost text-white m-l-10 ") do %>
                      <i class="icon arrow_triangle-right_alt"></i>Learn more
                    <% end %>
                  </div>
                </div>
              </div>
          </div>
      </div>
    </section>
  <%= render partial: 'globals/small_footer' %>
</div>