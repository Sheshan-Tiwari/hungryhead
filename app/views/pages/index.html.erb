<%= cache(['beta', 'page', 'v1']) do %>
  <div class="splash-wrapper">
      <section class="slider-caption">
        <div class="container">
          <div class="row">
            <div class="col-md-8 auto-margin hero-text text-center">
              <%= image_tag('badges/idea-guy.png') %>
              <h1 class="p-t-10 clearfix displayblock">
                Make startup ideas useful, together.
              </h1>
              <p class="fs-16 text-white m-t-20">
                Measure, validate and develop your startup idea with
                <span class="bold">peers and mentors</span>
              </p>
            </div>
          </div>
          <div class="row">
                <div class="col-md-6 auto-margin">
                  <div class="slider-caption-text text-center">
                    <div class="btn-box p-t-20">
                      <%= link_to(learn_path, class: "btn btn-ghost text-white") do %>
                        <i class="icon arrow_triangle-right_alt"></i>Learn more
                      <% end %>
                      <%= link_to('Join as Mentor', join_as_mentor_path, class: "m-l-10 btn btn-ghost text-white") %>
                    </div>
                  </div>
                </div>
            </div>
        </div>
      </section>
    <%= render partial: 'globals/small_footer' %>
  </div>
<% end %>