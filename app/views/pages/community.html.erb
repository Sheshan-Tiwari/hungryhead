<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate"
  }
%>

<%
  meta title: "Community - a place to grow",
     description: "Connect, meet and engage with like-minded people from around the world.",
     keywords: %w(gamification students collaboration entrepreneurship universities schools colleges)
%>

<%
  meta twitter: {
    card: "summary_large_image",
    site: "@hungryhead_co",
    title: "Community - a place to grow",
    image: "#{image_url('reward-banner.jpg')}",
    description: "Connect, meet and engage with like-minded people from around the world.",
  }
%>

<%
  meta og: {
    image: "#{image_url('reward-banner.jpg')}",
    title: "Community - a place to grow",
    url: "#{request.original_url}",
    description: "Connect, meet and engage with like-minded people from around the world.",
    site_name: "Hungryhead",
    locale: "en_GB",
    type: "article"
  }
%>


<% cache(['beta', 'the_product', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="product-wrapper bg-white">
    <div class="product">
      <div class="jumbotron no-margin" data-pages="parallax" data-social="cover">
          <div class="support-us-photo">
          <div class="container vmiddle">
          <div class="col-md-6 auto-margin <%= browser.mobile? ? 'p-b-40 p-t-20' : ''  %>">
            <div class="hero-section inner text-center">
              <h1 class="text-white bold">
                Community
              </h1>
              <p class="text-white fs-16">
                Bringing like-minded people together
              </p>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>

    <section class="bg-master-lightest text-center wrapper-small full-border-light-bottom no-overflow" id="intro">
      <div class="col-sm-10 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Hungryhead brings like-minded people together, all at one place so that it easier to enage and work together.
        </h1>
        <p class="col-sm-10 col-md-10 auto-margin m-b-20 fs-16 text-master">
          Learn who are integrated in our community.
        </p>
      </div>
    </section>

    <section class="wrapper-small no-overflow">
      <div class="container">
        <div class="md-p-l-20 md-p-r-20 xs-no-padding">
            <div class="col-md-5 col-sm-7 text-center auto-margin">
              <div class="content-mask-md m-b-20">
               <span class="fa fa-graduation-cap text-brand fs-50"></span>
              </div>
              <h1 class="m-t-5 m-b-20">Alumni</h1>
              <h5>Brainstorm and collaborate on idea privately.</h5>
              <p class="m-b-20 fs-16 text-master">
                We have integrated private chat for an idea to help team members collaborate and work on their idea privately.
              </p>
            </div>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest wrapper-small no-overflow">
      <div class="container">
        <div class="md-p-l-20 md-p-r-20 xs-no-padding">
            <div class="col-md-5 col-sm-7 text-center auto-margin">
              <div class="content-mask-md m-b-20">
                <span class="fa fa-university text-brand fs-50"></span>
              </div>
              <h1 class="m-t-5 m-b-20">Institutions</h1>
              <h5>Brainstorm and collaborate on idea with community.</h5>
              <p class="m-b-20 fs-16 text-master">
                We have integrated feedbacks, Q&A and issues section on idea profile where community can connect and engage to make ideas better.
              </p>
            </div>
        </div>
      </div>
    </section>

    <section class="wrapper-small no-overflow">
      <div class="container">
        <div class="md-p-l-20 md-p-r-20 xs-no-padding">
            <div class="col-md-5 col-sm-7 text-center auto-margin">
              <div class="content-mask-md m-b-20">
                <span class="fa fa-users text-brand fs-50"></span>
              </div>
              <h1 class="m-t-5 m-b-20">Students and faculties</h1>
              <h5>Collaborate with like-minded people in person.</h5>
              <p class="m-b-20 fs-16 text-master">
                With out integrated events features schools, colleges or universities can create events, invite people where everyone can meet and collaborate in person. Our approach to combine all spheres of human interaction so that everyone can make the most out of it.
              </p>
            </div>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          Learn about collaboration on hungryhead
        </h1>
        <%= link_to('Click here', collaboration_path, class: 'main-button fs-13 bold') %>
      </div>
    </section>

  </div>
<% end %>
<%= render partial: 'globals/footer' %>

