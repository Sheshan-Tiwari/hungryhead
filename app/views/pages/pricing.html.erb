<% cache(['beta', 'our_story', 'v1', "#{browser.device.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="learn-wrapper bg-white">
    <div class="learn">
      <div class="jumbotron no-margin" data-pages="parallax" data-social="cover">
          <div class="brand-photo inner">
          <div class="container vmiddle">
          <div class="row">
                <div class="col-md-8 auto-margin text-center">
                    <div class="hero-section z-index-10">
                        <h1 class="text-white bold">
                          Our platform fee
                        </h1>
                        <p class="text-white no-margin fs-16">
                          Bridging gap between you and your enpreneurial students
                        </p>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>

    <section class="bg-master-lightest text-center p-t-30 p-b-30 full-border-light-bottom no-overflow" id="intro">
      <div class="col-sm-12 col-md-6 auto-margin">
        <h1 class="m-t-5">
          Hungryhead is completely free for students, alumni and mentors
        </h1>
      </div>
    </section>

    <section class="pricing bg-white">
      <div class="wrapper-small">
        <div class="col-md-6 col-sm-10 auto-margin">
          <%= render partial: 'pages/content/pricing' %>
          <div id="invite_form_0" class="m-t-20">
            <h5>Please submit the form to recieve access to your institution profile.</h5>
            <%= render partial: 'invite_requests/new_institution' %>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          To know more about our product
        </h1>
        <%= link_to('Click here', product_path, class: 'main-button m-t-10 fs-13 bold') %>
      </div>
    </section>
  </div>
<% end %>
<%= render partial: 'globals/footer' %>
