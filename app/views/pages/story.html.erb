<% cache(['beta', 'our_story', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="learn-wrapper bg-white">
    <div class="learn">
      <div class="jumbotron no-margin" data-pages="parallax" data-social="cover">
          <div class="story-photo inner">
          <div class="container vmiddle">
          <div class="row">
                <div class="col-md-8 auto-margin text-center">
                    <div class="hero-section z-index-10">
                        <h1 class="text-white">
                          Discovering our way
                        </h1>
                        <p class="text-white no-margin fs-16">Every beginning has a story</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>

    <section class="story bg-master-lightest">
      <div class="<%= browser.mobile? ? 'wrapper-small' : 'wrapper-lg'  %>">
        <div class="col-md-6 auto-margin">
          <%= render partial: 'pages/content/story' %>
        </div>
      </div>
    </section>
    <section class="values bg-white">
      <div class="<%= browser.mobile? ? 'wrapper-small' : 'wrapper-lg'  %> overflow-hidden">
        <div class="col-md-6 auto-margin">
          <%= render partial: 'pages/content/values' %>
        </div>
      </div>
    </section>

    <div class="page-wrapper horz-section relative">
       <section id="cta" class="cta">
         <div class="cta-overlay">
             <div class="container">
                 <div class="wrapper-small">
                     <div class="row">
                         <div class="col-md-8 col-md-offset-2 text-center">
                             <h1 class="text-white bold m-t-20">
                              Collaborate with us
                             </h1>
                             <p class="fs-16 text-white">Share your ideas and feedbacks here </p>
                             <div class="social_icons m-t-20">
                               <%= link_to('Collaborate with us', help.root_path, class: 'btn btn-ghost') %>
                             </div>
                         </div>
                     </div>

                 </div>
             </div>
         </div>
        </section>
     </div>
  </div>
<% end %>
<%= render partial: 'globals/footer' %>


