<%
  meta property: {
    robots: "nofollow",
    charset: "utf-8",
    google: "notranslate",
    alexaVerifyID: "xDHxdz_2gqDx5OsChw00vOyCk3k"
  }
%>

<%
  meta title: "Our Story",
     description: "Learn how we got started to build an exclusive collaborative platform for student entrepreneurs studying in schools, colleges and universities",
     keywords: %w(student\ entrepreneurship school\ entrepreneurs student\ entrepreneurs idea\ collaboration universities\ entrepreneurship collaborative\ network\ students schools\ entrepreneurship entrepreneurship\ ideas idea\ validation student\ idea\ validation student\ idea\ collaboration global\ ideas\ platform)
%>

<%
  meta twitter: {
    card: "summary_large_image",
    site: "@hungryhead_co",
    title: "Our Story",
    image: "https:#{image_url('find-your_way.jpg')}",
    description: "Hungryhead is a culmination of our quest to start a company. Learn how we got started to build an exclusive platform for students",
  }
%>
<%
  meta og: {
    image: "https:#{image_url('find-your_way.jpg')}",
    title: "Our story",
    url: "#{request.original_url}",
    description: "Hungryhead is a culmination of our quest to start a company. Learn how we got started to build an exclusive platform for students",
    site_name: "Hungryhead",
    locale: "en_GB",
    type: "article"
  }
%>

<% cache(['beta', 'our_story', 'v1', "#{browser.mobile? ? 'mobile' : 'desktop'}"]) do %>
  <div class="learn-wrapper bg-white">
    <div class="learn">
      <div class="jumbotron no-margin" data-pages="parallax">
          <div class="story-photo inner">
          <div class="container vmiddle">
          <div class="row <%= browser.mobile? ? 'p-b-40 p-t-20' : ''  %>">
                <div class="col-md-8 auto-margin text-center">
                    <div class="hero-section z-index-10">
                        <h1 class="text-white bold">
                          Discovering our way
                        </h1>
                        <p class="text-white no-margin fs-16">Every beginning has a story</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>

    <section class="story bg-master-lightest">
      <div class="wrapper-small">
        <div class="col-md-6 col-sm-10 auto-margin">
          <%= render partial: 'pages/content/story' %>
        </div>
      </div>
    </section>

    <section class="values bg-white">
      <div class="wrapper-small overflow-hidden">
        <div class="col-md-6 col-sm-10 auto-margin">
          <%= render partial: 'pages/content/values' %>
        </div>
      </div>
    </section>

    <section class="bg-master-lightest full-border-light text-center wrapper-small full-border-light-bottom no-overflow p-b-100" id="intro">
      <div class="col-sm-8 col-md-8 auto-margin">
        <h1 class="m-t-5 m-b-20">
          To know more about our product
        </h1>
        <%= meta_events_tracked_link_to('Click here', product_path, class: 'main-button m-t-10 fs-13 bold', :meta_event => { :category => :visitor, :event => :page_viewed, :properties => { title: 'Product Page' } }) %>
      </div>
    </section>
  </div>
<% end %>
<%= render partial: 'globals/footer' %>


