<% if @user.follower_count.value > 0 %>
<div class="widget-16 panel no-margin widget-loader-circle">
    <div class="panel-heading">
        <div class="panel-title b-b b-grey p-b-5">
          <i class="fa fa-users text-danger"></i> Followers
        </div>
    </div>
    <div class="panel-body">
        <p class="m-b-5 small m-b-10 m-t-5"><%= pluralize(@user.follower_count, 'Follower') %></p>
        <ul class="list-unstyled">
            <% @user.recent_followers.members.take(8).each do |follower| %>
                <li class="m-r-10">
                    <div class="thumbnail-wrapper d32 circular b-white m-r-5 m-b-5">
                        <%= link_to(follower[:url]) do %>
                            <% if follower[:avatar].present? %>
                                <%= image_tag(follower[:avatar], :"data-src" => "#{follower[:avatar]}", :"data-src-retina" => "#{follower[:avatar]}", width: "35", height: "35",  data: { toggle: "tooltip", container: "body", title:"#{follower[:first_name] + " " + follower[:last_name] }"}) %>
                            <% else %>
                                <span class="placeholder bold text-white">
                                    <%= follower[:first_name].first + follower[:last_name].first %>
                                </span>
                            <% end %>
                        <% end %>
                    </div>
                </li>
            <% end %>

            <% if @user.follower_count.value > 8 %>
                <li>
                    <div class="thumbnail-wrapper d32 circular b-white">
                        <div class="bg-master text-center text-white">
                            <span>+34</span>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>