<%
  stats = {
    followers_count: @user.followers_counter.value,
    feedbacks_count: @user.feedbacks_counter.value,
    investments_count: @user.investments_counter.value,
    posts_count: @user.posts_counter.value,
    views_count: @user.views_counter.value,
    comments_count: @user.comments_counter.value,
    score: User.leaderboard.score(@user.id)
  }.to_json
