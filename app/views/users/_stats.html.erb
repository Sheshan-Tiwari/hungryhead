<%
  stats = {
    followers_count: number_to_human(@user.followers_counter.value),
    feedbacks_count: number_to_human(@user.feedbacks_counter.value),
    investments_count: number_to_human(@user.investments_counter.value),
    posts_count: number_to_human(@user.posts_counter.value),
    views_count: number_to_human(@user.views_counter.value),
    comments_count: number_to_human(@user.comments_counter.value),
    score: number_to_human(User.leaderboard.score(@user.id))
  }.to_json
%>
<%= react_component('CardStats', {data: stats}) %>
