<div class="modal fade slide-up disable-scroll" id="sendMessagePopup" tabindex="-1" role="dialog" aria-labelledby="sendMessagePopupLabel" aria-hidden="true">
<div class="modal-dialog">
<div class="modal-content-wrapper">
    <div class="modal-content">
        <div class="modal-header clearfix text-lef">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
              <i class="pg-close"></i>
          </button>
          <h5 class="text-left p-b-5"><span class="semi-bold">Send Message to</span> <%= @user.name %></h5>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <%= form_tag messages_path, method: :post do %>
                      <div class="form-group">
                        <%= text_field_tag 'recipient',@user.id, class: 'hidden' %>
                      </div>
                      <div class="form-group">
                        <%= label_tag 'message[subject]', 'Subject' %>
                        <%= text_field_tag 'message[subject]', nil, required: true, placeholder: "Type Subject...", class: "form-control input-lg fs-14", id: "icon-filter" %>
                      </div>

                      <div class="form-group">
                        <%= label_tag 'message[body]', 'Message' %>
                        <%= text_area_tag 'message[body]', nil, cols: 3, required: true, placeholder: "Type Message...", class: "form-control input-lg fs-14" %>
                      </div>

                      <%= button_tag 'Send', class: 'btn btn-primary fs-14 pull-right' %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>


<script type="text/javascript">
  $('#send-message-button').on('click', function(){
    $('#sendMessagePopup').modal('show');
  });
</script>