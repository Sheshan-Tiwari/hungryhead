<div class="container">
  <% data = render(template: 'users/show.json.jbuilder') %>

  <div class="col-md-4 col-sm-4 no-padding p-l-15 col-lg-4 col-xlg-4" id="profile_sidebar" data-turbolinks-permanent>
      <%= render partial: 'sidebar', locals: {data: data} %>
  </div>

  <div class="col-md-8 col-sm-8" id="profile_content" data-turbolinks-temporary>
    <div class="profile-nav box-shadow bg-white">
        <%= render partial: 'menu' %>
    </div>

    <div class="profile-activity-feed auto-height m-t-20">
      <%= render partial: 'activities' %>
      <% if @activities.next_page %>
        <div class="pagination-box text-center">
          <%=  link_to 'Load More Activities', profile_activities_path(:page => @activities.next_page), :class => 'load-more-posts', remote: true,  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: 'send_message' %>