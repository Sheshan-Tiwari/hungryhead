<div class="container p-b-60">
    <% data = render(template: 'users/show.json.jbuilder') %>

    <div class="col-md-4 col-sm-4 no-padding p-l-15 col-lg-4 col-xlg-4" id="profile_sidebar">
        <%= render partial: 'sidebar', locals: {data: data} %>
    </div>

    <div class="col-md-8 col-sm-8" id="profile_content">
        <div class="profile-nav box-shadow bg-white">
            <%= render partial: 'menu' %>
        </div>

        <div class="posts auto-height m-t-20">
            <%= render partial: 'posts' %>
            <% if @posts.next_page %>
              <div class="pagination-box text-center">
                <%=  link_to 'Load More Activities', profile_posts_path(:page => @posts.next_page), :class => 'load-more-posts', remote: true,  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..."} %>
              </div>
            <% end %>
        </div>
    </div>
</div>

<% if current_user.is_friend?(@user) %>
    <%= render partial: 'send_message' %>
<% end %>
