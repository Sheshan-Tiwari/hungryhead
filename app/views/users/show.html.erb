<div class="container p-b-60">
    <% data = render(template: 'users/show.json.jbuilder') %>

    <% cache(["user_sidebar_desktop_widget", @user, @user == current_user ? "owner" : "guest"]) do %>
        <div class="col-md-4 col-sm-5 no-padding visible-md visible-lg p-l-15" id="profile_sidebar">
            <%= render partial: 'sidebar', locals: {data: data} %>
        </div>
    <% end %>

    <div class="col-md-8 col-sm-12 xs-no-padding">

        <div class="box-shadow bg-light-blue ">
            <%= render partial: 'menu' %>
        </div>

        <% cache(["user_profile", @user, @user == current_user ? "owner" : "guest"]) do %>
            <div class="profile">
                <div class="cover box-shadow">
                    <%= render partial: 'cover', locals: {data: data} %>
                </div>

                <div class="badges-box clearfix m-t-10 widgets">
                    <div class="col-md-6 col-sm-6 no-padding sm-m-t-15 widget-item md-p-r-15">
                        <%= render partial: 'ideas' %>
                    </div>

                    <div class="col-md-6 col-sm-6 no-padding sm-m-t-15 widget-item">
                        <%= render partial: 'ideas_contributed' %>
                    </div>

                    <div class="col-sm-6 no-padding sm-no-padding xs-no-padding visible-sm visible-xs sm-p-r-15 md-p-r-15">
                        <%= render partial: 'sidebar', locals: {data: data} %>
                    </div>

                    <div class="col-md-6 col-sm-6 no-padding sm-no-padding widget-item md-p-r-15">
                        <%= render partial: 'badges' %>
                    </div>

                    <div class="col-md-6 col-sm-6 no-padding sm-no-padding widget-item">
                        <%= render partial: 'followers' %>
                    </div>

                    <div class="col-md-6 col-sm-6 no-padding widget-item md-p-r-15">
                        <%= render partial: 'followings' %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

