<% cache(["new_message_form", current_user]) do %>
  <div class="new-conversation-form">
    <%= simple_form_for(Mailboxer::Message.new, url: messages_path, :method => :post, role: "form") do |f| %>
      <div class="form-group">
        <%= label_tag 'recipients', 'Choose friends' %>
        <%= select_tag 'recipients', recipients_options, :width => '50%', :multiple => true, :class => 'form-control chosen-select', :"data-placeholder" => "Select friends" %>
      </div>

      <div class="form-group">
        <%= label_tag 'message[subject]', 'Subject' %>
        <%= f.input_field :subject, name: 'message[subject]', class: "form-control", :required => true, :placeholder => "Type Subject..." %>
      </div>

      <div class="form-group">
        <%= label_tag 'message[body]', 'Message' %>
        <%= f.input_field :body, name: 'message[body]', class: "form-control", :required => true, :placeholder => "Type Message..." %>
      </div>
      <%= button_tag 'Send', class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>
