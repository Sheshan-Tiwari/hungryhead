<div class="col-md-3 col-sm-3 no-padding p-l-15 col-lg-3 col-xlg-3">
  <%= render partial: 'sidebar' %>
</div>

<div class="col-md-6">
  <div class="activity-feed auto-height m-t-20">
      <div class="activity-feed-box live">
        <%= render_activities(@activities) %>
      </div>
      <% if @activities.next_page %>
        <div class="pagination-box text-center">
        <%=  link_to 'Load More Activities', root_path(:page => @activities.next_page), :class => 'load-more-posts', remote: true,  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..."} %>
        </div>
      <% end %>
  </div>
</div>

<div class="col-md-3 col-sm-3 no-padding p-r-15">
<div class="sidebar auto-height sticky white-bg box-shadow">

    <%= react_component('LatestFeed', {user_id: current_user.id, channel_name: "private-user-#{current_user.id}", path: notifications_path}.to_json) %>

    <div class="m-b-10">
        <div class="widget-11-2 panel no-border no-margin widget-loader-circle">
            <div class="panel-heading">
             <div class="panel-title b-b b-grey p-b-5">
              Latest Ideas
              </div>
              <div class="panel-controls">
                  <ul>
                      <li class="hidden-xlg">
                        <div class="dropdown">
                          <a data-target="#" href="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                          <i class="portlet-icon portlet-icon-settings"></i>
                          </a>
                          <ul class="dropdown-menu pull-right" role="menu">
                          <li><a href="#">Trending Idea</a>
                          </li>
                          <li><a href="#">Popular Ideas</a>
                          </li>
                          </ul>
                        </div>
                      </li>
                      <li>
                          <a data-toggle="refresh" class="portlet-refresh text-black" href="#">
                              <i class="portlet-icon portlet-icon-refresh"></i>
                          </a>
                      </li>
                  </ul>
              </div>
            </div>
            <div class="auto-overflow">
              <ul class="trending-list no-style">
              <% Idea.latest.values.take(3).each do |idea| %>
                <li class="m-b-10">
                  <div class="widget-16-header p-b-10 p-l-15">
                  <div class="pull-left">
                      <%= link_to(idea[:url]) do %>
                        <p class="all-caps bold  small no-margin overflow-ellipsis "><%= idea[:name] %></p>
                      <% end %>
                      <p class="small no-margin"><%= idea[:pitch] %></p>
                  </div>
                  <div class="clearfix"></div>
                  </div>
                </li>
              <% end %>
              </ul>
            </div>
            <div class="p-t-10 p-l-25 p-b-20 p-r-20">
                <p class="small no-margin text-brand pull-right">
                    <a href="#">
                      <span class="bold">See all</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
    </div>
</div>



