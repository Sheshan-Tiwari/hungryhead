<div class="container">
  <div class="col-md-3 col-sm-3 no-padding p-l-15 col-lg-3 col-xlg-3">
    <%= render partial: 'sidebar' %>
  </div>

  <div class="col-md-6">
    <div class="activity-feed auto-height m-t-20">
        <div class="activity-feed-box live">
          <% if @activities.length > 0 %>
            <% @activities.each do |activity| %>
              <% cache(["v1", activity.user, activity.trackable]) do %>
                <%= render_activity(activity) %>
              <% end %>
            <% end %>
          <% else %>
            <div class="card share" data-social="item">
                 <div class="card-description text-center">
                   <h2 class="text-master">No Activities to view</h2>
                 </div>
             </div>
          <% end %>
        </div>
        <% if @activities.next_page %>
          <div class="pagination-box text-center">
          <%=  link_to 'Load More Activities', root_path(:page => @activities.next_page), :class => 'load-more-posts', remote: true,  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..."} %>
          </div>
        <% end %>
    </div>
  </div>

  <div class="col-md-3 col-sm-3 no-padding p-r-15">
    <div class="sidebar auto-height sticky white-bg box-shadow">
        <%= react_component('LatestFeed', {user_id: current_user.id, path: notifications_path}.to_json) %>
        <% if Idea.latest.values.length > 0 %>
          <%= react_component('LatestIdeas', {path: latest_ideas_path}) %>
        <% end %>
    </div>
  </div>
</div>


