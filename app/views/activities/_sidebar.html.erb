<div class="sidebar auto-height sticky box-shadow bg-solid">
  <div class="user-sidebar padding-20">
    <div class="container-xs-height">
        <div class="row text-center">
            <div class="social-user-profile auto-margin">
                <div class="thumbnail-wrapper d48 circular bordered b-white">
                    <% if current_user.avatar.present? %>
                        <%= image_tag(current_user.avatar.url(:avatar), :"data-src" => "#{current_user.avatar.url(:avatar)}", :"data-src-retina" => "#{current_user.avatar.url(:square)}", width: "55", height: "55") %>
                    <% else %>
                        <span class="placeholder bold text-white" width="32px" height="32px">
                            <%= current_user.user_name_badge %>
                        </span>
                    <% end %>
                </div>

                </div>
                <div class="p-l-10 p-r-10">
                    <h3 class="no-margin text-white">
                        <%= current_user.name %>
                        <% if current_user.verified? %>
                            <i class="fa fa-check-circle text-white fs-16 m-l-10"></i>
                        <% end %>
                    </h3>
                    <p class="no-margin text-white fs-13">
                        <%= current_user.mini_bio %>
                    </p>
                    <p class="text-white m-t-5 small">
                        <%  if current_user.location_list.first %>
                            <span class="b-r b-white b-dashed p-r-5">
                                <i class="fa fa-map-marker"></i>
                                <%= current_user.location_list.first %>
                            </span>
                        <% end %>
                        <% if current_user.school  %>
                            <span class="p-l-5">
                                <i class="fa fa-university"></i>
                                <%= current_user.school_name %>
                            </span>
                        <% end %>
                    </p>
                </div>
            <div class="widget-16 text-white panel panel-transparent no-margin widget-loader-circle">
            <div class="row text-white m-t-15 p-l-10 p-r-10">
                <div class="col-md-4 text-center no-padding b-r b-white b-dashed">
                <p class="no-margin bold small">Investments</p>
                <p class="no-margin bold text-warning "><%= current_user.investments_counter.value %></p>
                </div>
                <div class="col-md-4 text-center no-padding b-r b-white b-dashed">
                <p class="no-margin bold small">Followers</p>
                    <p class="no-margin bold text-warning "><%= current_user.followers_counter.value %></p>
                </div>
                <div class="col-md-4 no-padding text-center">
                <p class="no-margin bold small">Ideas</p>
                    <p class="no-margin bold text-warning "><%= current_user.ideas_counter.value %></p>
                </div>
            </div>
            </div>
            </div>
        </div>
    </div>
    <% if current_user.people_you_may_know.length > 3 %>
    <div class="widget-16 panel no-margin widget-loader-circle">
        <div class="panel-heading">
            <div class="panel-title b-grey b-b p-b-5">
              People you may know
            </div>
        </div>
        <div class="panel-body">
            <ul class="list-unstyled">
            <% User.find(current_user.people_you_may_know).each do |user| %>
                <li class="m-r-10">
                <%= link_to(profile_path(user)) do %>
                    <div class="thumbnail-wrapper d32 circular b-white m-r-5 m-b-5 b-a b-white">
                            <% if user.avatar.present? %>
                            <%= image_tag(user.avatar.url(:avatar), :"data-src" => "#{user.avatar.url(:avatar)}", :"data-src-retina" => "#{user.avatar.url(:square)}", width: "35", height: "35") %>

                            <% else %>
                            <span class="placeholder bold fs-12 text-white">
                                <%= user.user_name_badge %>
                            </span>
                            <% end %>

                    </div>
                    <% end %>
                </li>
            <% end %>
            <% if current_user.people_you_may_know.length > 16 %>
            <li>
                <div class="thumbnail-wrapper d32 circular b-white">
                    <div class="bg-master text-center text-white">
                        <span>+34</span>
                    </div>
                </div>
            </li>
            <% end %>

            </ul>
            </div>
        </div>
    <% end %>
  </div>