<div class="sidebar auto-height sticky box-shadow bg-solid">
  <div class="user-sidebar padding-20">
    <div class="container-xs-height">
        <div class="row text-center">
            <div class="social-user-profile auto-margin">
                <div class="thumbnail-wrapper d48 circular bordered b-white"><% if current_user.avatar.present? %><%= image_tag(current_user.avatar.url(:avatar), :"data-src" => "#{current_user.avatar.url(:avatar)}", :"data-src-retina" => "#{current_user.avatar.url(:square)}", width: "55", height: "55") %><% else %>
                    <span class="placeholder bold text-white" width="32px" height="32px"><%= current_user.first_name.first + current_user.last_name.first %>
                    </span><% end %>
                </div>

                </div>
                <div class="p-l-10 p-r-10">
                    <h3 class="no-margin text-white"><%= current_user.name %> <i class="fa fa-check-circle text-white fs-16 m-l-10"></i></h3>
                    <p class="no-margin text-white fs-16"><%= current_user.mini_bio %></p>
                    <p class="text-white m-t-5 small">
                        <span class="b-r b-white b-dashed p-r-5">
                            <%= current_user.location_list.first %>
                        </span>
                        <span class="p-l-5">
                            <%= current_user.school_name %>
                        </span>
                    </p>
                </div>
            </div>

            <div class="row text-center text-white m-t-15">
                <div class="col-md-4 ">
                    <p class="all-caps bold small no-margin ">Views</p>
                    <p class="all-caps bold  no-margin text-warning ">14,256</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="all-caps bold small no-margin ">Today</p>
                    <p class="all-caps bold  no-margin text-warning ">24</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="all-caps bold small no-margin ">Week</p>
                    <p class="all-caps bold  no-margin text-warning ">56</p>
                </div>
            </div>
        </div>
    </div>
