
  <li class="event-list p-t-15 p-b-15">
      <span class="col-xs-height col-middle col-md-3">
        <% if event.cover.present? %>
          <span class="thumbnail-wrapper d100">
              <%= image_tag(event.cover.url(:cover), data: {src:  event.cover.url(:cover), :"src-retina" => event.cover.url(:cover)}, width: "100", height: "100") %>
          </span>
        <% else %>
          <div class="thumbnail-wrapper d48 inline circular">
            <span class="placeholder bold text-white">
              <%= event.name_badge %>
            </span>
          </div>
        <% end %>
      </span>
      <div class="p-l-10 col-xs-height col-middle col-xs-12 col-md-6 col-sm-6">
       <h5 class="text-master no-margin bold inline fs-14">
         <a href="<%= event_path(event) %>" class="inline">
           <%= event.title %>
         </a>
       </h5>
        <% if event.owner.avatar_present? %>
         <%= link_to(profile_path(event.owner)) do %>
          <%= image_tag(event.owner.get_avatar, data: {src: event.owner.get_avatar, :"src-retina" => event.owner.get_avatar}, width: "20px", class: 'm-l-10 inline') %>
         <% end %>
        <% end %>
        <p class="people-info no-margin">
          <span class="fa fa-map-marker text-green"></span>
          <%= event.address %>
        </p>
        <p class="text-master no-margin p-t-5">
          <%= truncate(event.description, length: 100) %>
        </p>
      </div>
     <div class="p-l-10 col-xs-height col-middle col-md-3 col-sm-3 hidden-xs">
       <div class="user-stats-list no-border">
         <div class="col-sm-6 text-center">
           Attending
           <span class="text-master displayblock text-center">
             5K
           </span>
         </div>
         <div class="col-sm-6 text-center">
           Invited
           <span class="text-master displayblock text-center">
              10K
           </span>
         </div>
       </div>
     </div>
    <div class="card-follow-button text-center p-l-10 col-xs-height col-middle hidden-xs col-sm-3 col-md-3">
      <a href="" class="main-button padding-5 p-l-10 p-r-10 fs-13 bold"><span class="fa fa-users"></span> Click to Join</a>
    </div>
  </li>

