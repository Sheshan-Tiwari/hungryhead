<div class="modal fade stick-up" id="eventPopupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header clearfix text-left">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                <i class="pg-close fs-14"></i>
                </button>
                <h5><%= params[:action].titlecase %> <span class="semi-bold b-b b-grey p-b-5"> event</span></h5>
                <p>Please fill in the form to create this event</p>
            </div>
            <div class="modal-body" id="event_popup_body">
            </div>
        </div>
    </div>
</div>