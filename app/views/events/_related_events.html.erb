<div class="panel box-shadow no-margin">
  <div class="panel-heading">
    <div class="panel-title b-b b-great p-b-5">
      <%= type || "Related" %> events
    </div>
  </div>
  <div class="panel-body">
    <% @related_events.take(5).each do |event| %>
     <div class="related-events">
       <%= render partial: 'events/event_small', locals: {event: event} %>
     </div>
    <% end %>
  </div>
</div>