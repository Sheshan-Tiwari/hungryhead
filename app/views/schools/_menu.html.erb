<div class="profile-nav row p-l-15">
	<ul class="profile-name inline no-style p-t-15 p-b-15 no-margin col-md-7">
		<li class="inline b-r b-grey b-dashed p-l-10 p-r-15">
			<%= link_to('Profile', profile_path(@school), class: "bold #{current_class?(profile_path(@school))} p-b-5 fs-13") %>
		</li>
		<li class="inline b-r b-grey b-dashed p-l-15 p-r-15">
			<%= link_to('Students', profile_students_path(@school), class: "bold fs-13 #{current_class?(profile_students_path(@school))} ") %>
		</li>
		<li class="inline b-r b-grey b-dashed p-l-15 p-r-15">
			<%= link_to('Ideas', profile_ideas_path(@school), class: "bold fs-13 #{current_class?(profile_ideas_path(@school))} ") %>
		</li>
		<li class="inline b-r b-grey b-dashed p-l-15 p-r-15">
			<%= link_to('Events', profile_events_path(@school), class: "bold fs-13 #{current_class?(profile_events_path(@school))} ") %>
		</li>
		<li class="inline p-l-15 p-r-15">
			<%= link_to('Enterprise support', profile_supports_path(@school), class: "bold fs-13 #{current_class?(profile_supports_path(@school))} ") %>
		</li>
	</ul>

	<div class="pull-right profile-action-buttons p-t-10 p-b-10 col-md-5">
		<%= react_component('Follow', {followed: followed?(@school)}) %>
			<% if current_user.admin? %>
				<%= content_tag(:div) do %>
					<%= link_to('#', onClick: "return false;", class: 'btn btn-info padding-5 p-l-10 p-r-10 m-r-10 pull-right', id: 'send-message-button') do %>
							<i class="fa fa-envelope"></i> Edit Profile
					<% end %>
				<% end %>
			<% end %>
	</div>
</div>