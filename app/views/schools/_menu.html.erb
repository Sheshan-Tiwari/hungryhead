<div class="row profile-nav p-l-30 p-r-15">
	<ul class="school-profile-name inline no-style p-t-15 p-b-15 no-margin col-md-7">
		<li class="inline p-r-25">
			<%= link_to('Profile', profile_path(@school), class: "bold #{sub_menu_active?(profile_path(@school))} p-b-5 fs-13") %>
		</li>
		<li class="inline p-r-25">
			<%= link_to('People', profile_people_path(@school), class: "bold fs-13 #{sub_menu_active?(profile_people_path(@school))} ") %>
		</li>
		<li class="inline p-r-25">
			<%= link_to('Ideas', profile_ideas_path(@school), class: "bold fs-13 #{sub_menu_active?(profile_ideas_path(@school))} ") %>
		</li>
		<li class="inline">
			<%= link_to('Events', profile_events_path(@school), class: "bold fs-13 #{sub_menu_active?(profile_events_path(@school))} ") %>
		</li>
	</ul>

	<div class="pull-right profile-action-buttons p-t-10 p-b-10">
		<% if current_user == @school.user %>
			<a class="inline pull-left text-master m-r-15 m-t-5">
				<span class="fa fa-cog">
				</span>
			</a>
			<div class="dropdown pull-left">
				<button class="profile-dropdown-toggle m-r-15 m-t-5" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					<span class="fa fa-pencil">
					</span>
				</button>
				<ul class="dropdown-menu" role="menu">
			    <li>
					  <%= link_to(profile_dashboard_path(@school), remote: true) do %>
					  	<span class="fa fa-pencil"></span> Edit profile
					  <% end %>
			  	</li>
			     <li>
					  <%= link_to(new_event_path(owner: @school.class.to_s, owner_id: @school)) do %>
					  	<span class="fa fa-calendar"></span> Create event
					  <% end %>
			  	</li>
	  	     <li>
	  			  <%= link_to(new_share_path(owner: @school.class.to_s, owner_id: @school)) do %>
	  			  	<span class="fa fa-calendar"></span> Share resource
	  			  <% end %>
	  	  	</li>
				</ul>
			</div>
	  <% end %>
	  <%= react_component('Follow', {followed: followed?(@school)}) %>
	</div>
</div>