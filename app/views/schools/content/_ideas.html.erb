<% if @ideas.length > 0 %>
 <% @ideas.each do |idea| %>
 <div class="idea panel panel-default">
   <%= render partial: 'organizations/content/idea', locals: {idea: idea} %>
 </div>
 <% end %>
<% else %>
  <div class="no-content"> No one has published ideas in <%= @organization.name %> </div>
<% end %>

<%= will_paginate @ideas %>
