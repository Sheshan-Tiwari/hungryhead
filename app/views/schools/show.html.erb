<div class="container">
  <div class="social-wrapper container">
    <div class="social" data-pages="social">
        <div class="jumbotron box-shadow" data-pages="parallax" data-social="cover">
          <%=  render partial: 'school_data' %>
          <%= render partial: 'cover' %>
         <div class="school-action-buttons col-md-5">
          <% if current_user.admin? %>
    			  <%= link_to('Edit Profile', edit_school_path(@school), class: "btn btn-danger btn-sm pull-right no-padding padding-5 p-l-10 p-r-10 m-r-10") %>
          <% end %>
    		</div>
        </div>
    </div>



    <div class="box-shadow bg-white">
      <%= render partial: 'menu' %>
    </div>


    <div class="content no-padding p-b-60">
      <!-- BEGIN CONTENT SECTION -->
      <section class="m-t-20 no-overflow" id="join">

          <div class="md-p-l-20 md-p-r-20 xs-no-padding">
                <div class="row top-picks">
                  <div class="top-pick-descrip col-md-12">
                    <h1>Browse People</h1>
                    <p>Vestibulum id est quam, sit amet rutrum arcu. Sed commodo leo nisi, eget luctus odio. Maecenas auctor purus a eros posuere.</p>
                    <div class="border-back"></div>
                  </div>

                </div>
                  <% @students.each do |user| %>
                  <div class="col-md-3 no-padding p-r-15">
                  <%= content_tag(:div, class: 'listing-card bg-white box-shadow') do %>
                  <%= content_tag(:div, class: 'listing-header  text-center') do %>
                    <%= content_tag(:div, class: 'listing-card-logo') do %>
                    <div class="thumbnail-wrapper d48 auto-margin m-r-5 m-b-5">
                     <% if user.avatar.present? %>
                       <%= image_tag(user.avatar.url(:avatar), width: "50px") %>
                     <% else %>
                       <span class="placeholder bold text-white">
                         <%= user.user_name_badge.upcase %>
                       </span>
                     <% end %>
                     </div>
                      <h5 class="no-margin fs-14 bold"><%= link_to(user.name, profile_path(user)) %></h5>
                      <h5 class="no-margin text-master"><i class="fa fa-map-marker"></i> <%= user.location_list %></h5>
                      <p class="fs-12"><%= truncate(user.mini_bio, length: 30) %></p>
                      <% if current_user != user %>
                        <div class="card-follow-button">
                          <%= react_component('Follow',{:followed => followed?(user)}) %>
                        </div>
                        <script type="text/javascript">
                           ReactRailsUJS.mountComponents();
                        </script>
                      <% else %>
                        <%= link_to(profile_path(user), class: 'btn btn-danger btn-sm text-white') do %>
                        <span class="text-white"><i class="fa fa-share"></i> View profile</span>
                        <% end %>
                      <% end %>
                    <% end %>
                      <% end %>
                      <div class="listing-card-stats">
                      <ul class="stastics-list">
                        <li>
                          Students
                          <span class="text-master"><i class="fa fa-users"></i> <%= user.followers_counter.value %></span>
                        </li>
                        <li>
                          Followers
                          <span class="text-master"><i class="fa fa-comment"></i> <%= user.feedbacks_counter.value %></span>
                        </li>
                        <li>
                          Ideas
                          <span class="text-master"><i class="fa fa-dollar"></i> <%= user.investments_counter.value %></span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <% end %>
                <% end %>


          </div>

      </section>
      <!-- END CONTENT SECTION -->

      <!-- BEGIN CONTENT SECTION -->
      <section class="m-t-20 no-overflow" id="join">

          <div class="md-p-l-20 md-p-r-20 xs-no-padding">
                <div class="row top-picks">
                  <div class="top-pick-descrip col-md-12">
                    <h1>Browse Ideas</h1>
                    <p>Vestibulum id est quam, sit amet rutrum arcu. Sed commodo leo nisi, eget luctus odio. Maecenas auctor purus a eros posuere.</p>
                    <div class="border-back"></div>
                  </div>

                </div>
                   <% @ideas.each do |idea| %>
                   <div class="col-md-3 no-padding p-r-15">
                   <%= content_tag(:div, class: 'listing-card bg-white box-shadow') do %>
                   <%= content_tag(:div, class: 'listing-header  text-center') do %>
                     <%= content_tag(:div, class: 'listing-card-logo') do %>
                     <div class="thumbnail-wrapper d48 auto-margin m-r-5 m-b-5">
                      <% if idea.logo.present? %>
                        <%= image_tag(idea.logo.url(:avatar), width: "50px") %>
                      <% else %>
                        <span class="placeholder bold text-white">
                          <%= idea.name_badge.upcase %>
                        </span>
                      <% end %>
                      </div>
                       <h5 class="no-margin fs-14 bold"><%= link_to(idea.name, idea_path(idea)) %></h5>
                       <h5 class="no-margin text-master"><i class="fa fa-map-marker"></i> <%= idea.location_list %></h5>
                       <p class="fs-12"><%= truncate(idea.high_concept_pitch, length: 30) %></p>
                       <% if current_user != idea.user %>
                         <div class="card-follow-button">
                           <%= react_component('Follow',{:followed => followed?(idea)}) %>
                         </div>
                         <script type="text/javascript">
                            ReactRailsUJS.mountComponents();
                         </script>
                       <% else %>
                         <%= link_to(idea_path(idea), class: 'btn btn-danger btn-sm text-white') do %>
                         <span class="text-white"><i class="fa fa-share"></i> View profile</span>
                         <% end %>
                       <% end %>
                     <% end %>
                       <% end %>
                       <div class="listing-card-stats">
                       <ul class="stastics-list">
                         <li>
                           Students
                           <span class="text-master"><i class="fa fa-users"></i> <%= idea.followers_counter.value %></span>
                         </li>
                         <li>
                           Followers
                           <span class="text-master"><i class="fa fa-comment"></i> <%= idea.feedbackers_counter.value %></span>
                         </li>
                         <li>
                           Ideas
                           <span class="text-master"><i class="fa fa-dollar"></i> <%= idea.investors_counter.value %></span>
                         </li>
                       </ul>
                     </div>
                   </div>
                   <% end %>
                 <% end %>
          </div>

      </section>
      <!-- END CONTENT SECTION -->

    </div>
  </div>
</div>
</div>
</div>