<div class="container">
  <div class="social-wrapper container">
    <div class="social">
        <div class="jumbotron box-shadow" data-pages="parallax" data-social="cover">
          <% cache(["cover", @school]) do %>
            <%= render partial: 'cover' %>
          <% end %>
        </div>
    </div>

    <div class="box-shadow bg-light-blue relative">
      <div class="school-data full-width" id="school_data">
        <%=  render partial: 'school_data' %>
      </div>
      <%= render partial: 'menu' %>
    </div>

    <div class="content p-t-20 overflow-hidden">

      <div class="col-md-4 no-padding p-r-15">
        <% cache(["school_card", @school]) do %>
          <%= render partial: 'school_card' %>
        <% end %>
      </div>

      <div class="col-md-8 no-padding">
      <%= cache(["beta", current_user, @activities]) do %>
        <%= render partial: 'activities/activities' %>
      <% end %>
      <% if @activities.next_page %>
        <div class="pagination-box text-center padding-10 bg-complete-lighter m-t-20 clearfix box-shadow">
          <%=  link_to 'Load More Activities', root_path(:page => @activities.next_page), :class => 'load-more-posts', remote: true,  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..."} %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  </div>